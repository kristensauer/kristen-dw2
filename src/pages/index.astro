---
import Layout from "../layouts/Layout.astro";
import Accordion from "../components/Accordion.astro";
import {Content as SampleContent} from "../components/markdown/sample-content.md";
---
<Layout title="Home">
    <h1>kristen</h1>
    <h1>sauer.</h1>
    <h2>Welcome!</h2>
    <button id="my-button">Java Button</button>
    <div class="text-block">Watch me dance!</div>
</Layout>

<style>
@import url('https://fonts.googleapis.com/css2?family=Lexend+Deca:wght@100..900&family=Space+Mono:ital,wght@0,400;0,700;1,400;1,700&display=swap');
html, body {
  height: 100%;
  margin: 0;
}

body {
  display: flex;
  align-items: flex-end;   
  justify-content: flex-start; 
  padding: 32px;        
  box-sizing: border-box;
  min-height: 100vh;
}

h1 {
  font-family: 'Lexend Deca', sans-serif;
  font-weight: 700;
  font-size: 5rem;
  margin: 0;
  padding: 0;
  display: block;
  line-height: 1;
}

h2 {
  font-family: 'Lexend Deca', sans-serif;
  font-style: normal;
  font-weight: 400;
  display: flex;
  align-items: center;
}

#my-button {
  font-family: 'Lexend Deca', sans-serif;
  font-size: 3rem;
  padding: 10px 20px;
  cursor: pointer;
  color: white;
  background-color: #007BFF;
  display: flex;
  justify-content: center;
}

.text-block {
  font-family: 'Lexend Deca', sans-serif;
  padding: 20px;
  font-size: 1.5rem;
}
.large-font {
  font-size: 3rem;
}
</style>
<script>
  const myButton = document.querySelector("#my-button");

  const myAction = function() {
    const myTextBlock = document.querySelector(".text-block");
    myTextBlock?.classList.toggle("large-font");
  };

  myButton?.addEventListener('click', myAction);
</script>
